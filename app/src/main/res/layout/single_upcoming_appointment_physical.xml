<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corner"
    android:backgroundTint="#dfe5ec"
    android:padding="10dp"
    android:layout_margin="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/appointmentID"
        android:text="ID# 1234567"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="31-03-2022"
        android:id="@+id/date"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:text="Claud Mwangi"
        android:layout_marginTop="10dp"
        android:textSize="12dp"
        android:layout_below="@id/appointmentID"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:text="08:00am"
        android:textSize="12dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:layout_below="@id/appointmentID"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:textSize="12dp"
        android:layout_marginTop="5dp"
        android:text="user@gmail.com"
        android:layout_below="@id/name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phoneNumber"
        android:text="+254789018938"
        android:textSize="12dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/email"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bookingStatus"
        android:text="Status"
        android:textSize="16dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/phoneNumber"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Bstatus"
        android:text="Pending"
        android:textSize="12dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:layout_below="@id/phoneNumber"
        android:textColor="#6666ff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/paymentStatus"
        android:text="Payment status"
        android:textSize="16dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/bookingStatus"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Pstatus"
        android:text="Unpaid"
        android:textSize="12dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:layout_below="@id/Bstatus"
        android:textColor="#ff0000"/>

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/upButton"
        android:text="Pay Now"
        android:textAllCaps="false"
        android:layout_below="@id/paymentStatus"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>