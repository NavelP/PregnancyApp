<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/forgotPasswordHeading"
        android:text="Forgot Password"
        android:textAlignment="center"
        android:padding="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/forgotpasswordtext"
        android:textAlignment="center"
        android:text="@string/enter_your_email_address_a_reset_code_will_be_sent_to_your_registered_email"
        android:layout_below="@id/forgotPasswordHeading"
        android:textStyle="bold"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/forgotPasswordEmail"
        android:hint="example@gmail.com"
        android:layout_below="@id/forgotpasswordtext"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/black"
        android:padding="10dp"/>

</RelativeLayout>