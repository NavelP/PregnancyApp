<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_corner"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#dfe5ec"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/upper">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/appointmentID"
                android:text="ID# 1234567"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="31-03-2022"
                android:id="@+id/date"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:text="Claud Mwangi"
                android:layout_marginTop="10dp"
                android:textSize="12dp"
                android:layout_below="@id/appointmentID"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time"
                android:text="08:00am"
                android:textSize="12dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                android:layout_below="@id/appointmentID"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/email"
                android:textSize="12dp"
                android:layout_marginTop="5dp"
                android:text="user@gmail.com"
                android:layout_below="@id/name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/phoneNumber"
                android:text="+254789018938"
                android:textSize="12dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/email"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bookingStatus"
                android:text="Status"
                android:textSize="16dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/phoneNumber"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Bstatus"
                android:text="Pending"
                android:textSize="12dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                android:layout_below="@id/phoneNumber"
                android:textColor="#6666ff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/paymentStatus"
                android:text="Payment status"
                android:textSize="16dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/bookingStatus"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Pstatus"
                android:text="Unpaid"
                android:textSize="12dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                android:layout_below="@id/Bstatus"
                android:textColor="#ff0000"/>

            <Button
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/upButton"
                android:text="Pay Now"
                android:textAllCaps="false"
                android:layout_below="@id/paymentStatus"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/joinCall"
                android:text="Join"
                android:backgroundTint="#6666ff"
                android:layout_marginTop="20dp"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="15dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cancelBooking"
                android:text="Cancel"
                android:layout_alignParentEnd="true"
                android:backgroundTint="#6666ff"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="15dp"/>

        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>